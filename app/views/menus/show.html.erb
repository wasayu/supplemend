<div class="border-bottom text-center mb-4">
  <h1>提案メニュー</h1>
</div>
<h2 class="text-center mb-4">提案商品</h2>
<div class="row mb-4">
  <% @supplements.each do |suggestion| %>
    <div class="col-sm-6 col-md-3">
      <div class="suppl-box">
        <div class="suppl-img">
          <%= suggestion.img.html_safe %> 
        </div>
        <p class="text-center"><%= suggestion.suppl_name %></p>
        <p class="text-center"><%= suggestion.flavor %></p> 
        <div class="link-btn">
          <%= link_to '公式ページ', suggestion.url, class: "btn-square" %>
        </div>
        <%= form_with url: edit_menu_path(@menu), method: :get, local: true do |f| %>
          <%= hidden_field_tag :supplement_id, suggestion.id %>
          <%= f.submit '商品変更', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<h2 class="text-center mb-4">提案内容</h2>
<div>
  <%= @suggestion.content %>
</div>
<h2 class="text-center mb-4">提案金額</h2>
<div>
  <h3 class="text-center mb-3"><%= @total_price %>円</h3>
</div>
<%= form_with(model: @menu, local: true) do |f| %>
  <%= f.label :name, 'メニュー名' %>
  <%= f.text_field :name %>
  <%= f.submit 'メニュー保存', class: 'btn btn-primary btn-block' %>
<% end %>