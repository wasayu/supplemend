<% if current_user.like?(supplement) %>
  <%= form_with(model: current_user.favorites.find_by(supplement_id: supplement.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :supplement_id, supplement.id %>
    <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :supplement_id, supplement.id %>
    <%= f.submit 'like', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>