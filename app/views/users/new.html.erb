<div class="row">
  <div class="login-box col-sm-6 col-10">
    <div class="row">
      <div class="login-title border-bottom text-center">
        <h1>SIGN UP</h1>
      </div>
    </div>
    
    <div class="login-form">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :name, 'Usename' %>
          <%= f.text_field :name, class: 'form-control login-text' %>
        </div>
      
        <div class="form-group">
          <%= f.label :email, 'E-mail' %>
          <%= f.email_field :email, class: 'form-control login-text' %>
        </div>
        
        <div class="form-gruop">
          <%= f.label :password, 'Password' %>
          <%= f.password_field :password, class: 'form-control login-text' %>
        </div>
        
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm Paeeword' %>
          <%= f.password_field :password_confirmation, class: 'form-control login-text' %>
        </div>
        
        <%= f.submit 'Sign Up', class: 'btn btn-gradient-radius btn-block' %>
      <% end %>      
    </div>

  </div>
</div>

    