<div class="border-bottom text-center">
  <h1>商品検索</h1>
</div>
<%= form_with url: search_supplements_path, method: :get, local: true do |f| %>
  <div class="form-group">
    <%= f.label :item_name, 'アイテム名' %>
    <%= f.select :item_name, {'プロテイン': 'プロテイン', 'アミノ酸': 'アミノ酸', 'ビタミン・ミネラル': 'ビタミン・ミネラル'}, { include_blank: '選択してください。'}, {class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.label :price, '価格' %>
    <%= f.select :price, {'5000円以下': 5000, '3000円以下': 3000}, { include_blank: '選択してください。'}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :brand, 'ブランド' %>
    <%= f.select :brand, {'Grong': 'Grong', 'MYPROTEIN': 'MYPROTEIN', 'savas': 'savas'}, { include_blank: '選択してください。'}, {class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.submit '検索', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
<%= render 'supplements', supplements: @supplements %>